<p id="notice"><%= notice %></p>

<p><strong>物件名</strong><%= @property.property_name %></p>
<p><strong>賃料</strong><%= @property.rent %>円</p>
<p><strong>住所</strong><%= @property.address %></p>
<p><strong>築年数</strong><%= @property.age %>年</p>
<p><strong>備考</strong><%= @property.remarks %></p>

<br>
<% count = 0 %>
<% @nearest_stations.each do | nearest_station | %>
<h3>最寄駅<%= count += 1 %></h3>
  <p><strong>路線</strong><%= nearest_station.route %>線</p>
  <p><strong>駅名</strong><%= nearest_station.station %>駅</p>
  <p><strong>徒歩分数</strong><%= nearest_station.minute_walk %>分</p>
<% end %>
<%= link_to '編集', edit_property_path(@property) %>
<%= link_to '戻る', properties_path %>
